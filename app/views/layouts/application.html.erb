<!DOCTYPE html>
<html>
<head>
  <title>Mylegacy</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

</head>

<body>


  <div>
    <div>
      <ul class="nav">
        <li class="home">
         <%= link_to 'MY LEGACY', root_path, class: 'links nav-link' %>
       </li>

       <% if current_user %>
       <li class="nav-item">
          <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: 'links nav-link'%>
      </li>
      <% else %>
      <li class="nav-item">
        <%= link_to "Sign In", new_user_session_path, class: 'links nav-link'%>
      </li>
      <li class="nav-item">
        <%= link_to "Sign Up", new_user_registration_path, class: 'links nav-link'%>
      </li>
      <% end %>

    </ul>
  </div>
  <br/>
</div>

<%= yield %>
</body>
</html>
